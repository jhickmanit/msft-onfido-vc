doctype html
head
  meta(charset='utf-8')
  link(rel='apple-touch-icon' sizes='76x76' href='/img/apple-icon.png')
  link(rel='icon' type='image/png' href='/img/favicon.ico')
  meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
  title #{title}
  meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport')
  // Fonts and icons
  link(rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons')
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css')
  // CSS Files
  link(rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous")
  link(rel="stylesheet" href="/css/material-kit.css")
  // CSS Just for demo purpose, don't include it in your project
  link(href='/css/style.css' rel='stylesheet')

body(class=`${bodyClass} sidebar-collapse`)
    nav#sectionsNav.navbar.navbar-transparent.navbar-color-on-scroll.fixed-top.navbar-expand-lg(color-on-scroll='100')
        .container
            .navbar-translate
                a.navbar-brand(href='/')
                    img(src="/img/journal_logo.png", alt="brand_logo")
                button.navbar-toggler(type='button' data-toggle='collapse' aria-expanded='false' aria-label='Toggle navigation')
                    span.sr-only Toggle navigation
                    span.navbar-toggler-icon
                    span.navbar-toggler-icon
                    span.navbar-toggler-icon
            .collapse.navbar-collapse
                ul.navbar-nav.ml-auto
                    li.nav-item
                        a.nav-link(href='/about_us', target="_blank")
                            i.material-icons info
                            |  About us
                    li.dropdown.nav-item
                        a.dropdown-toggle.nav-link(href='#' data-toggle='dropdown')
                            i.material-icons apps
                            |  Menu
                        .dropdown-menu.dropdown-with-icons
                            a.dropdown-item(href='/privacy')
                                i.material-icons layers
                                |  Privacy Policy
                            a.dropdown-item(href='/contact')
                                i.material-icons mail_outline
                                |  Contact us
    block content
    footer.footer.footer-default
        .container
            nav.float-left
                ul
                    li
                        a(href='/')
                            | The Technical Journal
                    li
                        a(href='/about_us')
                            | About Us
                    li
                        a(href='/privacy')
                            | Privacy
                    li
                        a(href='contact')
                            | Contact Us
            .copyright.float-right
                | &copy;
                script.
                    document.write(new Date().getFullYear())
                | 
                a(href='/') The Technical Journal
    
    script(src="https://unpkg.com/popper.js@1.12.6/dist/umd/popper.js" integrity="sha384-fA23ZRQ3G/J53mElWqVJEGJzU0sTs+SvzG8fXVWP+kJQ1lwFAOkcUOysnlKJC33U" crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
    script(src="https://unpkg.com/bootstrap-material-design@4.1.1/dist/js/bootstrap-material-design.js" integrity="sha384-CauSuKpEqAFajSpkdjv3z9t8E7RlpJ1UP0lKM/+NdtSarroVKu069AlsRPKkFBz9" crossorigin="anonymous")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js')
    // Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js' type='text/javascript')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/14.6.0/nouislider.min.js')
    // Place this tag in your head or just before your close body tag.
    script(async, defer, src='https://buttons.github.io/buttons.js')
    script(src='/js/material-kit.min.js?v=2.0.5' type='text/javascript')